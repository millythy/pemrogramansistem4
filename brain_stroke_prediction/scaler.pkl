import pickle
from sklearn.preprocessing import StandardScaler
import pandas as pd

# Sample dataset
data = pd.DataFrame({
    "feature1": [1.2, 2.3, 3.4, 4.5],
    "feature2": [2.2, 3.1, 1.5, 2.4],
    "feature3": [1.0, 2.1, 1.2, 2.3],
    "feature4": [3.5, 2.3, 1.3, 3.1],
    "feature5": [0.9, 1.4, 1.8, 1.2],
    "feature6": [2.3, 2.5, 3.1, 3.4],
    "feature7": [1.1, 1.3, 1.7, 1.9],
    "feature8": [2.5, 3.0, 2.6, 2.7],
    "feature9": [1.5, 2.1, 1.9, 2.0],
    "feature10": [3.1, 2.9, 2.8, 3.0]
})

# Initialize and fit the scaler
scaler = StandardScaler()
scaler.fit(data)

# Save the scaler to a .pkl file
with open('scaler.pkl', 'wb') as f:
    pickle.dump(scaler, f)